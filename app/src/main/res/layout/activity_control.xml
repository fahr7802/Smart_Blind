<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".control">

    <TextView
        android:text="Smart Blind"
        android:textSize="50dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#ACACAB"
        android:background="#F6EFAB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">

        <ImageButton
            android:id="@+id/weather"
            android:layout_width="134dp"
            android:layout_height="139dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:background="#00ff0000"
            android:scaleType="centerInside"
            android:src="@drawable/weather" />

        <TextView
            android:id="@+id/weatheronoff"
            android:text="자동조절 Off"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">

        <ImageButton
            android:id="@+id/sensor"
            android:layout_width="134dp"
            android:layout_height="139dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:background="#00ff0000"
            android:scaleType="centerInside"
            android:src="@drawable/illuminance_sensor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sensornum"
                android:text="조도량 : "
                android:textSize="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/sensoronoff"
                android:text="자동조절 Off"
                android:textSize="20dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/lux"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</LinearLayout>